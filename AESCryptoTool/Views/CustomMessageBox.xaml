<Window x:Class="AESCryptoTool.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Message" Width="400" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Style="{StaticResource ThemedDialogWindow}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,25">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="IconText" Grid.Column="0" Text="ℹ️" FontSize="32" VerticalAlignment="Top" Margin="0,0,20,0" FontFamily="Segoe UI Emoji"/>
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" MaxHeight="300">
                <TextBlock x:Name="MessageText" Text="Message content..." TextWrapping="Wrap" 
                           VerticalAlignment="Top" FontSize="14" Foreground="{DynamicResource TextPrimary}"
                           LineHeight="20"/>
            </ScrollViewer>
        </Grid>

        <StackPanel x:Name="ButtonPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <ui:Button x:Name="YesButton" Content="Yes" Click="YesButton_Click" Visibility="Collapsed" 
                    Appearance="Primary" Width="80"/>
            <ui:Button x:Name="NoButton" Content="No" Click="NoButton_Click" Visibility="Collapsed" 
                    Appearance="Secondary" Width="80" Margin="10,0,0,0"/>
            <ui:Button x:Name="OkButton" Content="OK" Click="OkButton_Click" Visibility="Collapsed" 
                    Appearance="Primary" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
