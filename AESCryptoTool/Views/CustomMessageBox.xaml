<Window x:Class="AESCryptoTool.Views.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Width="400" SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Style="{StaticResource ThemedWindow}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,25">
            <TextBlock x:Name="IconText" Text="ℹ️" FontSize="32" VerticalAlignment="Top" Margin="0,0,20,0" FontFamily="Segoe UI Emoji"/>
            <TextBlock x:Name="MessageText" Text="Message content..." TextWrapping="Wrap" 
                       VerticalAlignment="Center" FontSize="14" Foreground="{DynamicResource TextPrimary}"
                       MaxWidth="310" LineHeight="20"/>
        </StackPanel>

        <StackPanel x:Name="ButtonPanel" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="YesButton" Content="Yes" Click="YesButton_Click" Visibility="Collapsed" 
                    Style="{StaticResource ModernButton}" Width="80"/>
            <Button x:Name="NoButton" Content="No" Click="NoButton_Click" Visibility="Collapsed" 
                    Style="{StaticResource SecondaryButton}" Width="80" Margin="10,0,0,0"/>
            <Button x:Name="OkButton" Content="OK" Click="OkButton_Click" Visibility="Collapsed" 
                    Style="{StaticResource ModernButton}" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
