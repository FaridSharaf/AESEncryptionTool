<Window x:Class="AESCryptoTool.Views.NoteEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Edit Note" Height="240" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource ThemedDialogWindow}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Edit Note:" Grid.Row="0" Margin="0,0,0,10" 
                   Foreground="{DynamicResource TextPrimary}" FontWeight="SemiBold"/>
        
        <TextBox x:Name="NoteTextBox" Grid.Row="1" Margin="0,0,0,20"
                 Style="{StaticResource InputTextBox}"
                 TextWrapping="Wrap" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <ui:Button Content="Cancel" Appearance="Secondary" Click="CancelButton_Click" Margin="0,0,10,0"/>
            <ui:Button Content="Save" Appearance="Primary" Click="OkButton_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
