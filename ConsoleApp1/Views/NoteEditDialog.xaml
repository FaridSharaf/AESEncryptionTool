<Window x:Class="ConsoleApp1.Views.NoteEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Note" Height="200" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E2E">
    <Window.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#313244"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#89B4FA"/>
        <SolidColorBrush x:Key="BorderColor" Color="#45475A"/>
    </Window.Resources>
    
    <Border Background="{StaticResource CardBg}" CornerRadius="8" Margin="15" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="ðŸ“ Note:" Foreground="{StaticResource TextPrimary}" 
                   FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
            
            <TextBox x:Name="NoteTextBox" Grid.Row="1" 
                     TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" 
                     Background="#252536"
                     Foreground="{StaticResource TextPrimary}"
                     BorderBrush="{StaticResource BorderColor}"
                     CaretBrush="{StaticResource TextPrimary}"
                     Padding="10" FontSize="14"
                     Margin="0,0,0,15"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ’¾ Save" Width="100" Margin="5" Click="OkButton_Click" IsDefault="True"
                        Background="{StaticResource AccentBlue}" Foreground="#1E1E2E"
                        BorderThickness="0" Padding="10,8" FontWeight="SemiBold" Cursor="Hand"/>
                <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click" IsCancel="True"
                        Background="{StaticResource CardBg}" Foreground="{StaticResource TextPrimary}"
                        BorderBrush="{StaticResource BorderColor}" Padding="10,8" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>


